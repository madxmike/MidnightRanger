    "hide": "never",
    "shell": "system",
    "show_summary": true,
    "show_command": true,
    "tags": ["run"],
  },
  {
    "label": "Build & Run",
    "command": "/usr/bin/cmake --build $ZED_WORKTREE_ROOT/build --config Debug --target all -- && $ZED_WORKTREE_ROOT/build/Debug/game",
    "env": {},
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "reveal_target": "dock",
