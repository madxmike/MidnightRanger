[
  {
    "label": "CMake: Build",
    "command": "/usr/bin/cmake --build $ZED_WORKTREE_ROOT/build --config Debug --target all --",
    "env": {},
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "reveal_target": "dock",
    "hide": "never",
    "shell": "system",
